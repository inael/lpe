using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using FluentNHibernate.Mapping;

namespace Modelo
{
    public class TipoContatoMap : ClassMap<TipoContato>
    {
        public TipoContatoMap()
        {
            Table("TIPO_CONTATO");
            Id(a => a.Id, "ID");
            Map(a => a.NomeTipoContato, "NOME_TIPO");
            HasMany(a => a.ContatoTipoContato)
                .KeyColumn("ID")
                .Inverse()
                .LazyLoad();
        }
    }
}