#region Using

using System;
using System.Collections.Generic;
using System.Linq;
using Modelo;

#endregion

namespace Persistencia
{
    /// <summary>
    /// Classe de Persistência da entidade MenuGrupo
    /// </summary>

    public class MenuGrupoDao : Crud<MenuGrupo>
    {
        #region Construtores

        /// <summary>
        /// Construtor padrão passando para a classe base qual banco de operação.
        /// </summary>
        public MenuGrupoDao()
        {
        }

        #endregion

        #region Propridades

        #endregion

        #region Métodos padrões

        /// <summary>
        /// Método para listar todas as entidades do tipo: MenuGrupo
        /// </summary>
        /// <returns>Retorna uma lista de entidades.</returns>

        public List<MenuGrupo> Listar()
        {
            List<MenuGrupo> lista = Contexto.Listar().ToList();
            return lista;
        }

        /// <summary>
        /// Método para consultar uma entidade do tipo: MenuGrupo
        /// </summary>
        /// <param name="id">chave primária da entidade MenuGrupo.</param>
        /// <returns>Retorna uma entidade</returns>

        public MenuGrupo Consultar(int id)
        {
            MenuGrupo entidade = Contexto.Consultar(a => a.Id == id);
            return entidade;
        }

        /// <summary>
        /// Método para incluir uma entidade do tipo: MenuGrupo
        /// </summary>
        /// <param name="entidade">Entidade a ser inserida.</param>
        /// <returns>Retorna a entidade com a chave primaria definida.</returns>
        public MenuGrupo Incluir(MenuGrupo entidade)
        {
            Contexto.Incluir(entidade);
            return entidade;
        }

        /// <summary>
        /// Método para alterar uma entidade do tipo: MenuGrupo.
        /// </summary>
        /// <param name="entidade">Entidade a ser alterada.</param>
        /// <returns>Retorna verdadeiro ou falso se houve a alteração.</returns>
        public bool Alterar(MenuGrupo entidade)
        {
            return Contexto.Alterar(entidade);
        }

        /// <summary>
        /// Método para excluir uma entidade do tipo: MenuGrupo.
        /// </summary>
        /// <param name="entidade">Entidade a ser excluida.</param>
        /// <returns>Retorna verdadeiro ou falso se houve a excluida.</returns>
        public bool Excluir(MenuGrupo entidade)
        {
            return Contexto.Excluir(entidade);
        }

        #endregion

        #region Métodos personalizados

        public List<MenuGrupo> ListarAtivos()
        {
            List<MenuGrupo> lista = Contexto.Listar(a => a.Excluido == false).ToList();
            return lista;
        }
        #endregion
    }

}
