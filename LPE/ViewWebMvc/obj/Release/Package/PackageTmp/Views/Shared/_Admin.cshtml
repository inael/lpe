<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=ISO-8859-1" />
    <title>@(ViewBag.Title == null ? "Levivier - Administrativo" : @ViewBag.Title)</title>
    <link rel="stylesheet" type="text/css" href="/Content/css/levivier.css" />
    <link rel="stylesheet" type="text/css" href="/Content/css/admin.css" />
    <link rel="stylesheet" type="text/css" href="/Content/css/adminIndex.css" />
    <link rel="stylesheet" type="text/css" href="/Content/css/adminDetalhes.css" />
    <link rel="stylesheet" type="text/css" href="/Content/css/adminCreate.css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
</head>
<body>
    <div id="admin_conteiner_geral">
        <div id="admin_head">
            <div id="admin_topo_esquerdo">
                <div id="logo">
                    <img src="/Content/img/logo.png" alt="Levivier" />
                </div>
                <h1>
                    @Html.ActionLink("Administrativo", "Index", "Admin")</h1>
            </div>
            <div id="topo_direito">
                <br />
                @Html.Partial("_LogOnPartial")
                <br />
                <span class="err_login">Esqueceu a senha? Não é cadastrado? <a href="#">Clique aqui</a></span>
                <br />
            </div>
        </div>
        <div id="admin_content">
            @RenderBody()
        </div>
    </div>
</body>
</html>
