@{
    String UserCode = Convert.ToString(ViewBag.UserCode);
}
<html>
<head>
    <title>Redefinição de Senha</title>
    <link rel="stylesheet" type="text/css" href="/CockpitContentContent/css/estilo.css" />
    <!--jQuery-->
    <script type="text/javascript" src="/CockpitContentContent/js/jquery-1.6.1.js"></script>
    <script type="text/javascript" src="/CockpitContentContent/js/jquery-ui-1.8.13.custom.min.js"></script>
    <!--Implanta-->
    <script type="text/javascript" src="/CockpitContent/Scripts/ajaxUpdate.js"></script>
    <!--jQuery adds-->
    <script type="text/javascript" src="/CockpitContent/Scripts/jquery.treeview.js"></script>
    <script type="text/javascript" src="/CockpitContent/Scripts/jquery.fcbkcomplete.js"> </script>
    <script type="text/javascript" src="/CockpitContent/Scripts/jquery.ui.datepicker-pt-BR.js"></script>
    <script type="text/javascript" src="/CockpitContent/Scripts/jquery.history.js"></script>
    <script type="text/javascript" src="/CockpitContentContent/js/jquery.tooltip.js"></script>
    <script type="text/javascript" src="/CockpitContent/Scripts/jquery.validate.min.js"></script>
    <script type="text/javascript" src="/CockpitContent/Scripts/jquery.validate.messages_ptbr.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            adjustFieldSets("#ResetPasswordForm");
            $("#updatePasswordButton").click(function () {
                var Password = $("#Password").val();
                var PasswordConfirmation = $("#PasswordConfirmation").val();
                if (Password != null && Password != "" && PasswordConfirmation != null && PasswordConfirmation != "") {
                    if (Password == PasswordConfirmation) {
                        $("#ResetPasswordForm").submit();
                    }
                    else {
                        alert("A senha e a confirmação devem ser iguais");
                    }
                }
                else {
                    alert("Os valores da senha e confirmação devem ser preenchidos");
                }
            });
        });
    </script>
</head>
<body>
    <div class="bgRapaz4">
        <div class="conteudotop">
            <div class="topo">
                <a href="">
                    <img src="/CockpitContentContent/imgs/logo.png" alt="Logotipo" width="158" height="46"
                        border="0" align="left" style="margin-top: 15px;"></a>
                <div class="boxBusca">
                    <div class="boxMenuTop" style="float: left">
                    </div>
                </div>
                <div class="reset">
                </div>
            </div>
        </div>
        <div id="ouralert">
        </div>
        <div id='geral' class='appbody' width="960px">
            <table style="border-collapse: collapse;" align="center">
                <tr>
                    <td id="menutd" valign="top" style="background: url(/CockpitContentContent/imgs/bgLateralCont.png);">
                        <!-- Ocultador -->
                        <div class="splitter" style="float: right;" onclick="$('#optionsmenu').toggle(); $(window).resize();">
                            <div class="vsplitter">
                            </div>
                        </div>
                        <div id="optionsmenu" style="width: 200px;">
                        </div>
                    </td>
                    <td width="100%" valign="top">
                        <!-- Centro -->
                        <div class="conteudo">
                            <div id="conteudo">
                                <form id="ResetPasswordForm" name="addUser" action="ResetPasswordConfirmed" method="post"
                                style="width: 500px">
                                <div id="ouralert">
                                </div>
                                <div class="pageheader">
                                    Definição de nova senha para <strong>@UserCode</strong></label>
                                </div>
                                <fieldset id="UserFieldset">
                                    <label class="Pwd" for="Password">
                                        Senha
                                    </label>
                                    <input id="Password" name="Password" class="Pwd" type="password" size="30" />
                                    <label class="Pwd" for="PasswordConfirmation">
                                        Confirme a Senha
                                    </label>
                                    <input id="PasswordConfirmation" class="Pwd" name="PasswordConfirmation" type="password"
                                        size="30" />
                                    <input id="paramUserCode" name="paramUserCode" type="text" size="60" value="@UserCode" style="display:none" />
                                    <input type="hidden"  id="TemporaryKey" name="TemporaryKey" value="@ViewBag.TemporaryKey"> 
                                    <label class="Pwd" for="updatePasswordButton">
                                        Ação
                                    </label>
                                    <input id="updatePasswordButton" type="button" value="Gravar nova senha" class="btsave" />
                                </fieldset>
                                </form>
                            </div>
                        </div>
                    </td>
                </tr>
            </table>
            <div class="rodapeTotal">
                <div align="right">
                    <a href="http://www.implantait.com.br">
                        <img src="/CockpitContentContent/imgs/logo_implanta.png" height="25px" title="Desenvolvido por Implanta IT Solutions" /></a></div>
            </div>
        </div>
    </div>
</body>
</html>
