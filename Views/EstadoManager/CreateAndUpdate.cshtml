<div id="_div" style="display: none;">
    <div id="boxEsquerda">
        <form id="addForm" name="add" action="" method="post">
        <div class="pageheader">
            <input id="updateButton" type="button" value="Gravar" class="btsave" />
            <input id="backButton" type="button" value="Voltar" onclick="callBackButton('EstadoManager','List')" class="btback" />
        </div>
        <fieldset>
            <legend>Formulário de Estado</legend>
            <label id= "UFLabel" for="UF">
                UF
            </label>
            <input id="UF" name="UF" type="text" size="60" placeholder="Digite o nome da UF" required/>
            <label for="NomeEstado">
                Nome do estado
            </label>
            <input id="NomeEstado" name="NomeEstado" type="text" size="60" placeholder="Digite o nome do Estado" required/>
        </fieldset>
        </form>
    </div>
</div>


<script type="text/javascript">
    var currentID;

    $(document).ready(function () {

        var validator = $("#addForm").validate({
            rules: {
                UF: { required: true },
                NomeEstado: { required: true }
            },
            errorElement: "div",
            wrapper: "div",  // a wrapper around the error message 
            errorPlacement: function (error, element) { errorCSS(error, element); },
            messages: {
                UF: "O Nome do UF não pode ser nulo.",
                NomeEstado: "O Nome do ESTADO não pode ser nulo."
            }
        });
    });

</script>
